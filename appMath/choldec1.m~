function choldec1(A)
% 
% Cholesky-decomposition
% Only for playing with small integer matrices.
% 
  L = tril(A) ;
  s = size(L) ;
  A = tril
  r = s(1) ;
  fprintf('\nphase 0:\n') ;
  printout(L) ;
  paktc() ;
  for i=1:r-1
    fprintf('\nphase %d:\n', i) ;
    % comp of diagonal of L
    s = L(i,1:i-1)*L(i,1:i-1)'; 
    L(i,i) = L(i,i)-
    if L(i,i)<=0
      fprintf('not a positive definite matrix. exit.\n');
      paktc() ;
    end
    L(i,i)=sqrt(L(i,i)) ;
    for j=(i+1):r
      s = L(i,i:(j-1))*L(i,i:(j-1))
      A(j,:) = A(j,:) -p*A(j,i)*A(i,:) ;
    end
    printout(A) ;
    paktc() ;
  end
  fprintf('\n') ;
 
end
