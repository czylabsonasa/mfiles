clf;
clear;

syms x;
f=piecewise(-5<x<0,-3,x==0,3,0<x<5,9);

xx=linspace(-5,5);

tagok=[5,10,15];
nt=length(tagok);
for it=1:nt
   subplot(nt,1,it);
   fplot(f);
   hold on;
   plot(xx,furi(xx,tagok(it)))
   title(sprintf('n=%d',tagok(it)));
end

function ret=psum(t,n)
   ret=zeros(size(t));
   for it=1:n
      ret=ret+sin((2*it-1)*pi/4*t)/(2*it-1);
   end
   ret=2*4/pi*ret+14;
end
